{
  "version": 2,
  "alias": "mapper.now.sh",
  "builds": [
    {
      "src": "next.config.js",
      "use": "@now/next"
    }
  ],
  "build": {
    "env": {
      "BAL_API_URL": "https://api-bal.adresse.data.gouv.fr/v1",
      "GEO_API_URL": "https://geo.api.gouv.fr"
    }
  },
  "routes": [
    {
      "src": "/bal/(?<balId>[^/]+)/communes/(?<codeCommune>[^/]+)/voies/(?<idVoie>[^/]+)$",
      "dest": "/bal/commune?balId=$balId&codeCommune=$codeCommune&idVoie=$idVoie"
    },
    {
      "src": "/bal/(?<balId>[^/]+)/communes/(?<codeCommune>[^/]+)$",
      "dest": "/bal/commune?balId=$balId&codeCommune=$codeCommune"
    },
    {
      "src": "/bal/(?<balId>[^/]+)/(?<token>[^/]+)$",
      "dest": "/bal?balId=$balId&token=$token"
    },
    {
      "src": "/bal/(?<id>[^/]+)$",
      "dest": "/bal?balId=$balId"
    }
  ]
}
