{
  "version": 2,
  "alias": "mapper.now.sh",
  "builds": [
    {
      "src": "next.config.js",
      "use": "@now/next"
    }
  ],
  "build": {
    "env": {
      "BAL_API_URL": "https://api-bal.adresse.data.gouv.fr/v1",
      "GEO_API_URL": "https://geo.api.gouv.fr"
    }
  },
  "routes": [
    {
      "src": "/bal/(?<id>[^/]+)$",
      "dest": "/bal?balId=$id"
    },
    {
      "src": "/bal/(?<id>[^/]+)/communes/(?<codeCommune>[^/]+)$",
      "dest": "/bal/commune?balId=$id&codeCommune=$codeCommune"
    },
    {
      "src": "/bal/(?<id>[^/]+)/communes/(?<codeCommune>[^/]+)/voies/(?<voieId>[^/]+)$",
      "dest": "/bal/commune?balId=$id&codeCommune=$codeCommune&voieId=$voieId"
    }
  ]
}
